extends layout/layout

block variables
  - var title = 'Главная страница'
  - var pageClass = 'index-page'

block content
  main(class= pageClass)
    h1.visually-hidden Дизайн-студия "Nёrds"
    section.features
      .container
        h2.visually-hidden Особенности нашей студии
        .features__slider.slider
          ul.slider__list
            li.slider__item.slider__item--current
              section.feature.feature--1
                .feature__inner
                  h3.feature__heading.heading.heading--size--xl Долго, дорого, скрупулёзно
                  p.feature__text Математически выверенный дизайн#[br] для вашего сайта или мобильного приложения.
                  +button('a', 'Узнать больше', '', '#!')(class='feature__button')
            li.slider__item
              section.feature.feature--2
                .feature__inner
                  h3.feature__heading.heading.heading--size--xl Любим математику как никто другой
                  p.feature__text Никакого креатива, только математические формулы для расчета идеальных пропорций.
                  +button('a', 'Узнать больше', '', '#!')(class='feature__button')
            li.slider__item
              section.feature.feature--3
                .feature__inner
                  h3.feature__heading.heading.heading--size--xl Только ночь, только хардкор
                  p.feature__text Работать днем, как все? Мы против этого.#[br] Ближе к полуночи работа только начинается.
                  +button('a', 'Узнать больше', '', '#!')(class='feature__button')
          ul.slider__slides-buttons
            li.slider__slide-button-wrapper
              button.slider__slide-button.slider__slide-button--current(data-number='0' type='button')
                span.visually-hidden Показать слайд № 1
            li.slider__slide-button-wrapper
              button.slider__slide-button(data-number='1' type='button')
                span.visually-hidden Показать слайд № 2
            li.slider__slide-button-wrapper
              button.slider__slide-button(data-number='2' type='button')
                span.visually-hidden Показать слайд № 3
    +services
    section.page__section.page__section--border-top.about-us
      .about-us__container.container
        h2.visually-hidden О нас
        .about-us__description
          p.about-us__lead.heading.heading--size--l Мы — маленькая, но гордая дизайн-студия из Краснодара.
          p.about-us__text Исповедуем принципы минимализма и чистоты. Ставим математический расчёт превыше креатива. Работаем не покладая рук, как роботы.
          +list('Выполняем заказы на разработку:', [
            'Веб-сайтов любой сложности',
            'Мобильных приложений для iOS и Android',
            'Слайдшоу и видео для корпоративных презентаций'
          ])(class='about-us__list')
        .about-us__statistics
          picture.logo-alter
            source(type='image/webp' srcset='img/logo-alter.webp, img/logo-alter@2x.webp 2x')
            img.logo-alter__image(src='img/logo-alter.png' srcset="img/logo-alter@2x.png" width='360' height='208' alt='Логотип в виде надписи nёrd\'s на фоне празднично разбросанных красных, синих, жёлтых, зелёных кругов и палочек.')
          +statistics-list
    +clients(class='page__section page__section--border-top page__section--border-bottom')
